<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99212121"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/yodo1_openad_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center_vertical"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/yodo1_openad_app_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/yodo1_mas_button_uc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/yodo1_openad_app_icon"
            android:layout_marginStart="20dp"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/yodo1_openad_top_notice_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Continue to app"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/yodo1_openad_top_app_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxxx"
                android:textStyle="bold"
                android:textSize="18sp"
                android:singleLine="true" />
        </LinearLayout>

        <ImageView
            android:id="@+id/yodo1_openad_close_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_menu_forward" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/yodo1_openad_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="7dp"
            android:text="Advertisement" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="35dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:paddingStart="40dp"
            android:background="#0D212121"
            android:orientation="vertical">

            <TextView
                android:id="@+id/yodo1_openad_contnet_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:textSize="45sp"
                android:textStyle="bold"
                android:text="It worked!" />

            <TextView
                android:id="@+id/yodo1_openad_contnet_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/yodo1_openad_contnet_tv1"
                android:layout_marginTop="40dp"
                android:textSize="30sp"
                android:text="This is an app open ad. Click here for more." />

            <TextView
                android:id="@+id/yodo1_openad_contnet_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/yodo1_openad_contnet_tv2"
                android:layout_marginTop="40dp"
                android:textSize="20sp"
                android:text="developers.yodo1.com" />

            <Button
                android:id="@+id/yodo1_openad_contnet_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:paddingLeft="80dp"
                android:paddingRight="80dp"
                android:text="Open"
                android:textColor="#ffffff" />

        </RelativeLayout>


    </FrameLayout>


</LinearLayout>