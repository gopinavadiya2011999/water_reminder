<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="MissingDefaultResource">

    <FrameLayout
        android:id="@+id/tt_interact_splash_brush_fl"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/tt_interact_round_rect"
        android:layout_gravity="center_horizontal">



        <com.bytedance.sdk.component.adexpress.widget.BrushMaskView
            android:id="@+id/tt_interact_splash_brush_mask_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/tt_interact_splash_first_step_image"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/tt_interact_round_rect" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tt_splash_brush_mask_title"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tt_interact_splash_brush_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="@string/tt_splash_brush_mask_hint"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </LinearLayout>


        </RelativeLayout>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/tt_interact_splash_brush_hand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/image_hand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tt_splash_hand3" />
    </RelativeLayout>

</RelativeLayout>