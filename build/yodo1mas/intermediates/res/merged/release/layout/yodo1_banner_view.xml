<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="#e8ebf0"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/yodo1_banner_background"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#e8ebf0" />

    <ImageView
        android:id="@+id/yodo1_banner_icon"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:id="@+id/yodo1_banner_message"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/yodo1_banner_icon"
        android:scaleType="fitCenter" />

    <ImageView
        android:id="@+id/yodo1_banner_visit_site"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="false"
        android:layout_marginTop="5dp" />

</RelativeLayout>