<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:id="@+id/tt_splash_unlock_btn"
        android:layout_width="247dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/tt_splash_unlock_btn_bg">

        <ImageView
            android:id="@+id/tt_splash_unlock_go"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:src="@drawable/tt_splash_unlock_image_go" />

        <com.bytedance.sdk.component.adexpress.widget.FlowLightView
            android:id="@+id/tt_splash_arrow_group"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_toStartOf="@id/tt_splash_unlock_empty"
            android:layout_toEndOf="@id/tt_splash_unlock_go"
            app:image_src="@drawable/tt_splash_unlock_image_arrow"
            app:start_color="#00ffffff"
            app:center_color="#ffffffff"
            app:end_color="#00ffffff"
            app:halo_width="10"
            app:gradient="40" />

        <ImageView
            android:id="@+id/tt_splash_unlock_empty"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/tt_splash_unlock_icon_empty" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tt_splash_unlock_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tt_splash_unlock_btn"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:shadowColor="#99000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="4"
        android:textColor="@android:color/white" />
</RelativeLayout>