<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <com.bytedance.sdk.openadsdk.core.widget.TTRoundRectImageView
        android:id="@+id/tt_loading_icon"
        android:layout_width="68dp"
        android:layout_height="68dp"
        tools:src="@tools:sample/avatars" />


    <TextView
        android:id="@+id/tt_loading_appname"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxWidth="150dp"
        android:maxLines="2"
        android:textColor="#222222"
        android:textSize="18sp"
        tools:text="Clash RoyaleClash RoyaleClash RoyaleClash RoyaleClash " />

    <FrameLayout
        android:id="@+id/tt_loading_tags_container"
        android:layout_width="244dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:ellipsize="end"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:id="@+id/tt_loading_text_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/tt_landingpage_loading_text_rect"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="12dp"
            android:paddingTop="4dp"
            android:paddingRight="12dp"
            android:paddingBottom="4dp"
            android:textColor="#1A73E8"
            android:textSize="12sp"
            tools:text="pretty good game" />

        <TextView
            android:ellipsize="end"
            android:layout_gravity="center"
            android:id="@+id/tt_loading_text_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/tt_landingpage_loading_text_rect"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="12dp"
            android:paddingTop="4dp"
            android:paddingRight="12dp"
            android:paddingBottom="4dp"
            android:textColor="#1A73E8"
            android:textSize="12sp"
            tools:text="pretty good game 222" />
    </FrameLayout>

    <LinearLayout
        android:paddingStart="43dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:orientation="horizontal"
        android:paddingLeft="33dp"
        tools:ignore="RtlSymmetry">

        <ProgressBar
            android:id="@+id/tt_loading_progressbar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="160dp"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical"
            android:max="100"
            android:progress="1"
            android:progressDrawable="@drawable/tt_full_reward_loading_progress_style"
            tools:progress="60" />

        <TextView
            android:maxLines="1"
            android:id="@+id/tt_loading_progress_number"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:textColor="#161823"
            android:textSize="14sp"
            tools:text="100%" />
    </LinearLayout>
</LinearLayout>